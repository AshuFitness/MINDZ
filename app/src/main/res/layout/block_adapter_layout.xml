<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:id="@+id/card_block"
        tools:targetApi="lollipop"
        android:padding="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center"
          >


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/block_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:civ_border_color="#1a1a1a"
                app:civ_border_width="3dp"
                android:layout_margin="3dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blockName"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:text="Abhi" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blockusername"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="Bangalore" />



            <info.hoang8f.widget.FButton
                android:id="@+id/unblock"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Unblock"
                android:textSize="15sp"
                fbutton:buttonColor="@color/white"
                fbutton:shadowColor="@color/primary"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
              />


        </LinearLayout>

        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />


    </android.support.v7.widget.CardView>




</RelativeLayout>