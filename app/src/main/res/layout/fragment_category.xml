<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CategoryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/choose_cat_rel"
        android:background="@color/white_40"
        android:alpha="0.7">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pic_1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/crime_catgry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height= "wrap_content"
                        android:gravity="center"
                        android:text="Crime"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/pic_2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:tint="@color/colorPrimaryDark"
                        android:clickable="true"
                        android:src="@drawable/problems_catgry" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height= "wrap_content"
                        android:text="Area Problem"
                        android:gravity="center"
                        android:textColor="#000"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pic_3"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/fun_catgry" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height= "wrap_content"
                        android:text="Fun Activiry"
                        android:gravity="center"
                        android:textColor="#000"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pic_4"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:tint="@color/colorPrimaryDark"
                        android:clickable="true"
                        android:src="@drawable/crime_catgry" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opportunity"
                        android:textColor="#000"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pic_5"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/politics_catgry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Political"
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/pic_6"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:foregroundTint="@color/colorPrimaryDark"
                        android:clickable="true"
                        android:src="@drawable/sports_catgry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textColor="#000"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pic_7"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/others_catgry" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="#000"
                        android:gravity="center"/>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>
</FrameLayout>